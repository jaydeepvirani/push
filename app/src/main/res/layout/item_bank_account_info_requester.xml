<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data class="RequesterBankInfoBinding">

    <variable
        name="viewmodel"
        type="com.android.unideal.questioner.viewmodel.BankInfoItemViewModel"
        />
  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:background="@color/colorWhite"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:id="@+id/bankNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_remove_bank"
        android:layout_toStartOf="@+id/btn_remove_bank"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        >
      <RadioButton
          android:id="@+id/jobcmplete"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_centerVertical="true"
          android:background="@drawable/drw_quecheckbox"
          android:button="@null"
          android:clickable="false"
          />
      <LinearLayout
          android:id="@+id/bankLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginStart="5dp"
          android:layout_toEndOf="@+id/jobcmplete"
          android:layout_toRightOf="@+id/jobcmplete"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/text_view_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="@{viewmodel.BankName}"
            android:textColor="@color/colorShark"
            android:textSize="16sp"
            tools:text="Industrial and Commercial Bank of China (Asia)"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

          <TextView
              android:id="@+id/firstFour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="3dp"
              android:layout_marginStart="3dp"
              android:layout_marginTop="8dp"
              android:gravity="center_vertical"
              android:text="****"
              android:textColor="@color/colorShark"
              android:textSize="12sp"
              />
          <TextView
              android:id="@+id/secondFour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="3dp"
              android:layout_marginStart="3dp"
              android:layout_marginTop="8dp"
              android:layout_toEndOf="@+id/firstFour"
              android:layout_toRightOf="@+id/firstFour"
              android:gravity="center_vertical"
              android:text="****"
              android:textColor="@color/colorShark"
              android:textSize="12sp"
              />
          <TextView
              android:id="@+id/thirdFour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="3dp"
              android:layout_marginStart="3dp"
              android:layout_marginTop="8dp"
              android:layout_toEndOf="@+id/secondFour"
              android:layout_toRightOf="@+id/secondFour"
              android:gravity="center_vertical"
              android:text="****"
              android:textColor="@color/colorShark"
              android:textSize="12sp"
              />
          <TextView
              android:id="@+id/text_view_account_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="3dp"
              android:layout_marginStart="3dp"
              android:layout_marginTop="6dp"
              android:layout_toEndOf="@+id/thirdFour"
              android:layout_toRightOf="@+id/thirdFour"
              android:gravity="center_vertical"
              android:text="@{viewmodel.AccountNumber}"
              android:textColor="@color/colorShark"
              android:textSize="12sp"
              tools:text="1234"
              />
        </RelativeLayout>
      </LinearLayout>

    </RelativeLayout>
    <ImageButton
        android:id="@+id/btn_remove_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/colorWhite"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_action_delete"
        />
  </RelativeLayout>
</layout>