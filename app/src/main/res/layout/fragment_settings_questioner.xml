<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data class="RequesterSettingBinding">
    <variable
        name="viewmodel"
        type="com.android.unideal.agent.viewmodel.SettingsViewModel"
        />
  </data>

  <RelativeLayout
      android:id="@+id/mainLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorWildSand"
      >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        style="@style/UniDealToolbar.Questioner"
        >
      <TextView
          android:id="@+id/settings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical|center"
          android:text="@string/title_settings"
          android:textColor="@color/colorWhite"
          android:textSize="18sp"
          style="@style/fontAvenirMedium"
          />

      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:scrollbars="none"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/manageNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingBottom="10dp"
            android:paddingLeft="27dp"
            android:paddingStart="27dp"
            android:paddingTop="10dp"
            android:text="@string/text_manage_notifications"
            android:textColor="@color/colorShark"
            android:textSize="17sp"
            style="@style/fontAvenirMedium"
            />

        <LinearLayout
            android:id="@+id/newPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@drawable/drw_card_background"
            android:paddingEnd="27dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingStart="27dp"
            >

          <TextView
              android:id="@+id/expertTopic"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/text_expert_topic"
              android:textColor="@color/colorShark"
              android:textSize="15dp"
              style="@style/fontAvenirBook"
              />

          <android.support.v7.widget.SwitchCompat
              android:id="@+id/newPostNotification"
              android:layout_width="@dimen/dimen_switch_compat"
              android:layout_height="@dimen/dimen_switch_compat"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:theme="@style/QuestionerSwitch"
              />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/jobStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@drawable/drw_card_background"
            android:paddingEnd="27dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingStart="27dp"
            >

          <TextView
              android:id="@+id/lbljobStatus"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/title_job_status"
              android:textColor="@color/colorShark"
              android:textSize="15dp"
              style="@style/fontAvenirBook"
              />

          <android.support.v7.widget.SwitchCompat
              android:id="@+id/jobStatusNotification"
              android:layout_width="@dimen/dimen_switch_compat"
              android:layout_height="@dimen/dimen_switch_compat"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:theme="@style/QuestionerSwitch"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@drawable/drw_card_background"
            android:paddingEnd="27dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingStart="27dp"
            >

          <TextView
              android:id="@+id/lblTransaction"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/transaction"
              android:textColor="@color/colorShark"
              android:textSize="15dp"
              style="@style/fontAvenirBook"
              />

          <android.support.v7.widget.SwitchCompat
              android:id="@+id/transactionsNotifications"
              android:layout_width="@dimen/dimen_switch_compat"
              android:layout_height="@dimen/dimen_switch_compat"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:theme="@style/QuestionerSwitch"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/appTourGuideLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@drawable/drw_card_background"
            android:paddingEnd="27dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingStart="27dp"
            >

          <TextView
              android:id="@+id/lblTourGuide"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/app_tour_guide"
              android:textColor="@color/colorShark"
              android:textSize="15dp"
              style="@style/fontAvenirBook"
              />

          <android.support.v7.widget.SwitchCompat
              android:id="@+id/tourGuideStatus"
              android:layout_width="@dimen/dimen_switch_compat"
              android:layout_height="@dimen/dimen_switch_compat"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:theme="@style/QuestionerSwitch"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/englishChineseSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:background="@drawable/drw_card_background"
            >

          <RadioGroup
              android:id="@+id/radioGroup"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
            <RadioButton
                android:id="@+id/english"
                android:layout_width="wrap_content"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/text_english_checkbox"
                android:textColor="@color/colorPersianGreen"
                android:textSize="20sp"
                style="@style/UnidealRadioButtonQuestioner"
                />

            <RadioButton
                android:id="@+id/chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:paddingLeft="5dp"
                android:text="@string/text_chinese"
                android:textColor="@color/colorPersianGreen"
                android:textSize="20sp"
                style="@style/UnidealRadioButtonQuestioner"
                />
          </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/drw_card_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="23dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingStart="23dp"
            >
          <TextView
              android:id="@+id/manageCreditCard"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/text_manage_credit_card"
              android:textColor="@color/colorShark"
              android:textSize="15sp"
              style="@style/fontAvenirBook"
              />
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/ic_next_arrow_questioner"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/drw_card_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="23dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingStart="23dp"
            >
          <TextView
              android:id="@+id/textViewContactUs"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/contact_us"
              android:textColor="@color/colorShark"
              android:textSize="15sp"
              style="@style/fontAvenirBook"
              />
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/ic_next_arrow_questioner"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/FAQ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/drw_card_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="23dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingStart="23dp"
            >
          <TextView
              android:id="@+id/textViewTNQ"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/termsNCondition"
              android:textColor="@color/colorShark"
              android:textSize="15sp"
              style="@style/fontAvenirBook"
              />
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/ic_next_arrow_questioner"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
          <Button
              android:id="@+id/logOutButton"
              android:text="@string/text_log_out"
              android:textSize="17sp"
              style="@style/ButtonQuestioner"
              />

          <Button
              android:id="@+id/deleteAcount"
              android:layout_marginBottom="20dp"
              android:layout_marginTop="12dp"
              android:text="@string/text_delete_account"
              android:textSize="17sp"
              style="@style/ButtonAgent.Delete"
              />
        </LinearLayout>
      </LinearLayout>
    </ScrollView>
  </RelativeLayout>
</layout>