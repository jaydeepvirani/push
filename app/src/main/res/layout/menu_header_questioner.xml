<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="32dp"
    tools:background="@color/colorPersianGreen"
    >

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/imageViewRequesterPic"
      android:layout_width="46dp"
      android:layout_height="46dp"
      android:src="@drawable/ic_profile_picture_test"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/textViewRequesterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        tools:text="Jack Jonson"
        />

    <TextView
        android:id="@+id/customerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questioner"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        />
  </LinearLayout>
</LinearLayout>