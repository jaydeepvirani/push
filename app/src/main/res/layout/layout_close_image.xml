<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <ImageView
      android:id="@+id/imageSelect"
      android:layout_width="@dimen/new_job_image"
      android:layout_height="@dimen/new_job_image"
      android:layout_marginEnd="9dp"
      android:layout_marginRight="9dp"
      android:background="@drawable/image_border_background"
      />
  <ImageView
      android:id="@+id/imageClose"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/imageSelect"
      android:layout_alignRight="@+id/imageSelect"
      android:padding="10dp"
      app:srcCompat="@drawable/ic_close_image"
      />
</RelativeLayout>